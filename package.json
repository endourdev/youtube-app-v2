{
  "name": "youtube-app-v2",
  "version": "0.0.1",
  "description": "Electron app who display YouTube but with a Discord RPC",
  "main": "index.js",
  "scripts": {
    "start": "electron-forge start",
    "build": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "build": {
    "icon": "./src/img/logo.ico",
    "appId": "tech.endour.youtube",
    "productName": "Youtube Watcher",
    "nsis": {
      "artifactName": "Youtube-Watcher-Setup-${version}-x64.${ext}",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./src/img/logo.ico",
      "uninstallerIcon": "./src/img/logo.ico",
      "deleteAppDataOnUninstall": true
    }
  },
  "author": "Mohamed Ouaouda",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "electron": "^31.2.0"
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "electron-squirrel-startup": "^1.0.1",
    "rpmbuild": "^0.0.23"
  }
}
